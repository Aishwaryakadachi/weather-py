{
    "name": "Python Development",
    "image": "python:3.9",  // Use the Python version that matches your project

    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:1": {
            "version": "latest",
            "moby": true
        }
    },
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Set *default* container specific settings.json values on container create.
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "python.pythonPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.autopep8Path": "/usr/local/py-utils/bin/autopep8",
                "python.formatting.blackPath": "/usr/local/py-utils/bin/black",
                "python.formatting.yapfPath": "/usr/local/py-utils/bin/yapf",
                "python.sortImports.path": "/usr/local/py-utils/bin/isort"
            },
            "extensions": [
                "ms-python.python",  // Python extension
                "ms-python.vscode-pylance"  // Pylance for improved IntelliSense
            ]
        },
        "codespaces": {
            "openFiles": [
                "README.md"
            ]
        }
    },
    "forwardPorts": [
        8080  // Forward the port your app runs on, e.g., Flask default is 5000
    ],

    "postCreateCommand": "pip install -r requirements.txt",  // Install dependencies

    "remoteUser": "root"
}
